<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= content %></p>

<% posts.forEach(function(post) { %>
    <h1><%= post.title %></h1>
    <% var shortBody = post.body.substring(0, 100) + " ... "; %>
    <% var linkTitle = post.title.toLowerCase(); %>
    <% linkTitle = linkTitle.replace(" ", "-") %>
    <p><%= shortBody %><a href="/posts/<%= linkTitle %>">Read More</a></p>
<% }); %>


<%- include("partials/footer") -%>